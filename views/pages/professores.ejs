<%- include('../partials/header') %>
<section class="container">
    <div class="row">
        <div class="col">
            <div class="row mt-5">
                <div class="col-6">
                    <h1>Lista de professores</h1>                    
                </div>
                <div class="col-6">
                    <!-- antes de continuar o cod na linha 16 fizemos essa table chamando a rota para cadastrar os professores -->
                    <a href="/professores/cadastrarProfessores" class="btn btn-outline-info"> Cadastrar novo professor</a>
                </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>                            
                        <th>Matéria</th>
                        <th>Turma</th>
                        <th>Período</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                <% if(retorno =="" ){%>
                    <tr>
                        <td colspan="4" class="alert alert-warning"> Nenhum professor cadastrado!</td>
                    </tr>
                    <%}else{retorno.forEach(function(professor){ %>              
                        <tr>                            
                            <td><%=professor.nome %></td>                                
                            <td><%=professor.materia %></td>
                            <td><%=professor.turma %></td>
                            <td><%=professor.periodo %></td>
                            <td><%=professor.email %></td>
                            <td>
                                <a href="/professores/editarProfessores/<%= professor._id %>" class="btn btn-sm btn-warning">Editar</a> <!--29 Ação de editar-->
                                <a href="/professores/deletarProfessores/<%= professor._id %>" class="btn btn-sm btn-danger">Excluir</a> <!--28 Ação de deletar-->
                            </td>
                        </tr>
                    <% })} %>
                </tbody>                
            </table>
        </div>
    </div>
</section>
<%- include('../partials/footer') %>


<!-- 23 - inserindo o conteudo que irá na pagina de professores (lista) junto com o include(header e footer) -->